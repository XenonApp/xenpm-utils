{
    "preferences": {
        "wordWrap": true,
        "useSoftTabs": true,
        "tabSize": 4,
        "trimWhitespaceOnSave": true,
        "gotoExclude": ["/node_modules/*", "/dist*"],
        "saveTimeout": 0
    },
    "packages": [],
    "modes": {
        "javascript": {
            "commands": {
                "Tools:Check": {
                    "options": {
                        "globals": {
                            "describe": true,
                            "it": true,
                            "expect": true,
                            "fail": true
                        }
                    }
                }
            }
        }
    }
}
